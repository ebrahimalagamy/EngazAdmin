<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Branches.BranchAddActivity">

    <ImageView
        android:id="@+id/image_view_branch"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <ProgressBar
        android:id="@+id/progress_bar_branch"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_branch"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button_choose_image_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_bar_branch"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#163474"
        android:text="Choose image"
        android:textAllCaps="false"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/edit_text_name_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_choose_image_branch"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:hint="Enter company name" />

    <EditText
        android:id="@+id/edit_text_time_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_name_branch"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:hint="Time Work" />

    <EditText
        android:id="@+id/edit_text_days_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_time_work"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:hint="Days work" />

    <EditText
        android:id="@+id/edit_text_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_days_work"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:hint="Status" />

    <Button
        android:id="@+id/button_upload_branch"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#163474"
        android:text="Upload"
        android:textAllCaps="false"
        android:textColor="#fff" />

    <Button
        android:id="@+id/button_show_upload_branch"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/button_upload_branch"
        android:backgroundTint="#36C398"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="#fff" />

</RelativeLayout>