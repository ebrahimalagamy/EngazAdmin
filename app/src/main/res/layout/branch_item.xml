<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_branch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <!--            <androidx.cardview.widget.CardView
                            app:cardElevation="4dp"
                            app:cardCornerRadius="16dp"
                            android:layout_margin="2dp"
                            android:layout_width="150dp"
                            android:layout_height="100dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_branch"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop"
                                android:layout_height="100dp"
                                android:src="@mipmap/ic_launcher_round"

                                />
                        </androidx.cardview.widget.CardView>-->

            <ImageView
                android:padding="2dp"
                android:id="@+id/branch_image"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round"
                 />

            <TextView
                android:id="@+id/branch_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="مفتوح"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"


            android:orientation="vertical">

            <TextView
                android:id="@+id/branch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="مرور مدينة بدر"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#163474"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/branch_days_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الحد - الخميس" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="- ايام العمل : "
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/branch_time_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9 صباحا - 3 عصرا" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="- مواعيد العمل : "
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#000" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>